{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc: build - backend",
            "type": "shell",
            "command": "npx tsc -p tsconfig.json",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"],
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
